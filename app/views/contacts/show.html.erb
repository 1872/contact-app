<h2><%= @contact.first_name %> <%= @contact.last_name %></h2>
<p>Group(s):</p>
<ul>
  <% @contact.groups.each do |group| %>
    <li><%= group.name %></li>
  <% end %>
</ul>
<p><%= @contact.email %></p>
<p><%= @contact.phone_number %></p>
<div>
  <%= link_to "Edit", "/contacts/#{@contact.id}/edit" %>
</div>
<div>
  <%= link_to "Delete", "/contacts/#{@contact.id}", method: :delete %>
</div>
<div>
  <%= link_to "Back to all contacts", "/contacts" %>
</div>